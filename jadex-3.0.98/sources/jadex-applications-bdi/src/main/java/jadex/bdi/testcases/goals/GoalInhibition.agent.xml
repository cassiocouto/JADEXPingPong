<?xml version="1.0" encoding="UTF-8"?>
<!--
	<H3>Test goal inhibition.</H3>
	
	The "docnt" perform goal increments the "count" belief,
	unless the "lowerbound" maintaingoal is active, which ensures that "count"
	stays below 4.
-->
<agent xmlns="http://www.activecomponents.org/jadex-bdi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.activecomponents.org/jadex-bdi
	                    http://www.activecomponents.org/jadex-bdi-${jadex_build_version}.xsd"
	name="GoalInhibition"
	package="jadex.bdi.testcases.goals">

	<imports>
		<import>jadex.bdi.testcases.*</import>
		<import>java.util.logging.Level</import>
	</imports>

	<capabilities>
		<capability name="testcap" file="jadex.bdi.planlib.test.Test"/>
	</capabilities>

	<beliefs>
		<beliefref name="timeout"  exported="true">
			<concrete ref="testcap.timeout"/>
		</beliefref>
		<beliefref name="testresults"  result="true">
			<concrete ref="testcap.testresults"/>
		</beliefref>
		<belief name="count"  class="int">
			<fact>0</fact>
		</belief>
	</beliefs>

	<goals>
		<performgoal name="docnt" retry="true" retrydelay="100" exclude="never"/>
		<maintaingoal name="lowerbounds">
			<deliberation>
				<inhibits ref="docnt"/>
			</deliberation>
			<maintaincondition>
				$beliefbase.count&lt;4
			</maintaincondition>
		</maintaingoal>
	</goals>

	<plans>
        <plan name="increment">
			<parameter name="beliefname" class="String">
				<value>"count"</value>
			</parameter>
			<parameter name="value" class="int">
				<value>3</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="docnt"/>
			</trigger>
		</plan>
		
		 <plan name="decrement">
			<parameter name="beliefname" class="String">
				<value>"count"</value>
			</parameter>
			<parameter name="value" class="int">
				<value>-1</value>
			</parameter>
			<parameter name="rate" class="int">
				<value>100</value>
			</parameter>
			<body class="BeliefIncrementPlan"/>
			<trigger>
				<goal ref="lowerbounds"/>
			</trigger>
		</plan>
		
		<plan name="testplan">
			<body class="GoalInhibitionPlan"/>
		</plan>
	</plans>
	
	<expressions>
		<condition name="countis5">
			$beliefbase.count==5
		</condition>
		<condition name="countis6">
			$beliefbase.count==6
		</condition>
	</expressions>
	
	<properties>
		<property name="debugging">false</property>
		<!-- <property name="logging.level">Level.INFO</property> -->
	</properties>

	<configurations>
		<configuration name="default">
			<beliefs>
				<initialbelief cref="testcap.testcase_cnt">
					<fact>3</fact>
				</initialbelief>
			</beliefs>
			<goals>
				<initialgoal ref="docnt"/>
				<initialgoal ref="lowerbounds"/>
			</goals>
			<plans>
				<initialplan ref="testplan"/>
			</plans>
		</configuration>
	</configurations>

</agent>

